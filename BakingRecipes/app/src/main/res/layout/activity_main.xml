<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleLight">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/view_padding_or_margin"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/view_padding_or_margin" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="@dimen/progress_bar_width_height"
        android:layout_height="@dimen/progress_bar_width_height"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>
